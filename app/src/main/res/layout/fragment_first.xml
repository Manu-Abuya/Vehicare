<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FirstFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="184dp"
            android:layout_height="174dp"
            android:src="@drawable/ic_profile_picture"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            tools:ignore="RelativeOverlap">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#00252424"
                android:backgroundTint="#001D1C1C" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                tools:ignore="ObsoleteLayoutParam">

                <TextView
                    android:id="@+id/text_driverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="@string/driver_s_name"
                    android:textColor="@color/black"
                    android:paddingEnd="40dp"
                    android:textSize="24sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="#00252424"
                android:backgroundTint="#001D1C1C"
                tools:ignore="DuplicateIds" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                tools:ignore="ObsoleteLayoutParam">


                <TextView
                    android:id="@+id/text_driverEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Driver's Email"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:paddingEnd="45dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00252424"
        android:backgroundTint="#001D1C1C"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            tools:ignore="UselessLeaf,UselessParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                tools:ignore="ObsoleteLayoutParam">

                <TextView
                    android:id="@+id/text_VehicleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="@string/vehicle_name"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:paddingStart="20dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00252424"
        android:backgroundTint="#001D1C1C"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            tools:ignore="UselessLeaf,UselessParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                tools:ignore="ObsoleteLayoutParam">

                <TextView
                    android:id="@+id/text_LicenseNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="@string/vehicle_license_number"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:paddingStart="20dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00252424"
        android:backgroundTint="#001D1C1C"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            tools:ignore="UselessLeaf,UselessParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                tools:ignore="ObsoleteLayoutParam">

                <TextView
                    android:id="@+id/text_VehicleID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Vehicle Identification Number"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:paddingStart="20dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00252424"
        android:backgroundTint="#001D1C1C"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            tools:ignore="UselessLeaf,UselessParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                tools:ignore="ObsoleteLayoutParam">

                <TextView
                    android:id="@+id/text_VehicleInsuranceNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Vehicle Insurance Number"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:paddingStart="20dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00252424"
        android:backgroundTint="#001D1C1C"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            tools:ignore="UselessLeaf,UselessParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                tools:ignore="ObsoleteLayoutParam">

                <TextView
                    android:id="@+id/text_VehicleOtherDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="@string/other_details"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:paddingStart="20dp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#00252424"
        android:backgroundTint="#001D1C1C"/>



</LinearLayout>